def evaluator(x):
    evaluation = 0
    if x >= 100:
        evaluation = ('Excellent')
    elif x >= 80:
        evaluation = ('Good')
    elif x >= 60:
        evaluation = ('Fair')
    elif x >= 40:
        evaluation = ('Poor')
    elif x >= 20:
        evaluation = ('In a Bad Way')
    elif x >= 0:
        evaluation = ('Deadish')
    else:
        evaluation = ('Dead')
    print(evaluation)
    return evaluation





