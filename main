#Learn Classes by Doing

import random
import time
import math



class Retainer:

    def __init__(self, name, hp, attack, armor):
        self.name = name
        self.hp = hp
        self.attack = attack
        self.armor = armor
        

    def givewounds(self, attack, hp):
        damage = attack * (hp / 100)
        return damage

    def getwounds(self, armor, damage):
        hp_loss = damage - armor
        self.hp -= hp_loss
        return self.hp

    def status():
        print ('Name: ' + self.name)
        print ('HP: ' + self.hp)
        print ('Attack: ' + self.attack)
        print ('Armor: ' + self.armor)

